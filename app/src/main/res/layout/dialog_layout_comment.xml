<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin_s">

    <View
        android:layout_width="@dimen/activity_horizontal_margin_lg"
        android:layout_height="@dimen/activity_horizontal_margin_s"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/postedByID"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

        <View
            android:layout_width="@dimen/activity_horizontal_margin"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/timestampID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/app_color"/>

    </LinearLayout>

    <View
        android:layout_width="@dimen/activity_horizontal_margin_lg"
        android:layout_height="@dimen/activity_horizontal_margin_s"/>

    <TextView
        android:id="@+id/postContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/font_size_default_m"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_horizontal_margin_s">

        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

            <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="1"
            android:padding="@dimen/activity_horizontal_margin_s">

                <TextView
                    android:id="@+id/commentedByID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/app_color"
                    android:textColor="@color/colorPrimary"/>

                <TextView
                    android:id="@+id/commentContentID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/activity_horizontal_margin_s"
                    android:paddingLeft="@dimen/activity_horizontal_margin_s" />

                <EditText
                    android:id="@+id/post"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/post_comment" />

            </TableLayout>



        </ScrollView>



    </LinearLayout>



</LinearLayout>